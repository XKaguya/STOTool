@model STOTool.Class.Settings

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>STOTool Web User Interface</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.8/dist/sweetalert2.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.8/dist/sweetalert2.min.js"></script>

  <style>
    body {
      background: linear-gradient(135deg, #ffb6b9, #fae3d9);
      font-family: 'Poppins', sans-serif;
      color: #333;
      margin: 0;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      min-height: 100vh;
      position: relative;
    }

    .container {
      width: 100%;
      margin-top: 20px;
    }

    h1.section-header {
      font-size: 2.5rem;
      color: #ffffff;
      text-align: center;
      font-weight: bold;
      margin-bottom: 30px;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .row {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
      width: 100%;
    }

    .card {
      border-radius: 15px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      background: white;
      overflow: hidden;
      flex: 1 1 100%;
      margin-bottom: 20px;
      display: flex;
      flex-direction: column;
    }

    .card-header {
      background-color: #4e54c8;
      color: #fff;
      font-size: 1.25rem;
      font-weight: 600;
      padding: 15px;
      text-align: center;
    }

    .card-body {
      padding: 20px;
      flex: 1;
    }

    .settings-item {
      background-color: #f9f9f9;
      border-radius: 10px;
      margin-bottom: 15px;
      padding: 15px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }
    
    #logWindow {
      width: 100%;
      max-height: 500px;
      overflow-y: auto;
      padding: 15px;
      border: 1px solid #ccc;
      background-color: #f9f9f9;
      border-radius: 10px;
      font-size: 0.9rem;
      margin-top: 20px;
      white-space: pre-wrap;
    }
    
    #runtimeWindow {
      position: fixed;
      top: 20px;
      right: 20px;
      background-color: rgba(255, 255, 255, 0.8);
      padding: 10px;
      border-radius: 8px;
      font-size: 1.2rem;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      z-index: 10;
    }

    .btn-primary {
      background-color: #4e54c8;
      border-color: #4e54c8;
      padding: 12px 30px;
      font-size: 1.1rem;
      border-radius: 30px;
      width: 100%;
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #2a2b88;
      border-color: #2a2b88;
    }

    #logWindow {
      user-select: text;
    }

    .btn-secondary {
      background-color: #ff6f61;
      border-color: #ff6f61;
      padding: 12px 30px;
      font-size: 1.1rem;
      border-radius: 30px;
      width: 100%;
      transition: all 0.3s ease;
      margin-top: 10px;
    }

    .btn-secondary:hover {
      background-color: #e15b53;
      border-color: #e15b53;
    }

  </style>
</head>
<body>

<div class="container">
  <h1 class="section-header">Index Page</h1>

  <!-- Logs Section -->
  <div class="row">
    <div class="card" style="flex: 1 1 100%; max-width: 100%; margin-bottom: 30px;">
      <div class="card-header">
        <h5>Current Logs</h5>
      </div>
      <div class="card-body">
        <div id="logWindow" class="settings-item">
          <p><strong>Log:</strong> Loading...</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="card" style="flex: 1 1 30%;">
      <div class="card-body">
        <a href="/Process/Settings" class="btn btn-secondary btn-lg">Settings</a>
      </div>
    </div>
  </div>
</div>

<div id="runtimeWindow">
  <p><strong>Elapsed Time:</strong> 00:00:00</p>
</div>

<script>
  function displayLogs() {
    $.ajax({
      url: '/Process/GetLogs',
      type: 'GET',
      success: function(response) {
        if (response) {
          $("#logWindow").html("<p><strong>Log:</strong><br>" + response.replace(/\n/g, "<br>") + "</p>");

          let logWindow = document.getElementById("logWindow");
          logWindow.scrollTop = logWindow.scrollHeight;
        } else {
          $("#logWindow").html("<p><strong>Log:</strong> No logs found.</p>");
        }
      },
      error: function() {
        $("#logWindow").html("<p><strong>Log:</strong> Failed to load logs.</p>");
      }
    });
  }

  function displayRuntime() {
    $.ajax({
      type: "GET",
      url: "/Process/GetElapsedTime",
      success: function(response) {
        $("#runtimeWindow").html("<p><strong>Elapsed Time:</strong> " + response + "</p>");
      },
      error: function() {
        $("#runtimeWindow").html("<p><strong>Elapsed Time:</strong> Error fetching runtime</p>");
      }
    });
  }

  $(document).ready(function() {
    displayLogs();
    displayRuntime();

    setInterval(function() {
      displayLogs();
    }, 1000);

    setInterval(function() {
      displayRuntime();
    }, 1000);
  });
</script>

</body>
</html>
